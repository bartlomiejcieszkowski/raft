<Window x:Class="Gafa.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gafa"
        mc:Ignorable="d"
        Title="GAFA" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Button Margin="10" Grid.Column="0" Content="Mount" Click="Mount_Click"/>
        <Button Margin="10" Grid.Column="1" Content="Unmount" Click="Unmount_Click"/>
    </Grid>
</Window>
